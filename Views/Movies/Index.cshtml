@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Inicio</h2>

<p>
    <a asp-action="Create">Añadir Nuevo Componente</a>
</p>

<form asp-controller="Movies" asp-action="Index" method="get">

    <p>
        <select asp-for="MovieGenre" asp-items="Model.Genres">

            <option value="">All</option>
            
        </select>

        Componente: <input type="text" name="SearchString" />

        <input type="submit" value="Filtro" />

    </p>

</form>

<table class="table">
    <thead>
        <tr>
            <th>
                
                @Html.DisplayNameFor(model => model.Movies[0].Componente)

            </th>

            <th>

                @Html.DisplayNameFor(model => model.Movies[0].Marca)

            </th>

            <th>

                @Html.DisplayNameFor(model => model.Movies[0].Precio)

            </th>

            <th>

                @Html.DisplayNameFor(model => model.Movies[0].Valoracion)

            </th>

            <th>

                @Html.DisplayNameFor(model => model.Movies[0].FechaDeSalida)

            </th>

            <th>

                @Html.DisplayNameFor(model => model.Movies[0].Imagen)

            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Movies)

        {

            <tr>

                <td>

                    @Html.DisplayFor(modelItem => item.Componente)

                </td>

                <td>

                    @Html.DisplayFor(modelItem => item.Marca)

                </td>

                <td>

                    @Html.DisplayFor(modelItem => item.Precio)

                </td>

                <td>

                    @Html.DisplayFor(modelItem => item.Valoracion)

                </td>

                <td>

                    @Html.DisplayFor(modelItem => item.FechaDeSalida)

                </td>

                <td>

                    @Html.DisplayFor(modelItem => item.Imagen)

                </td>


                <td>

                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |

                    <a asp-action="Details" asp-route-id="@item.Id">Detalles</a> |

                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>

                </td>

            </tr>

        }

    </tbody>
</table>